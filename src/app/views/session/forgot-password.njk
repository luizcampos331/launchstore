{% extends 'layout.njk' %}

{% import 'parts/card.njk' as card %}

{% block content %}
{% call card.render('Esqueceu a senha?', 'login container') %}
  <form action="/users/forgot-password" method="POST">
    <div class="fields">
      <div class="item">
        <div>E-mail</div>
        <div>
          <input 
            type="text"
            name="email"
            placeholder="Digite o e-mail cadastrado"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')">
        </div>
      </div>
    </div>

    <button class="button" type="submit">Recuperar senha</button>

  </form>
{% endcall %}
{% endblock content %}